# RLM Engine Configuration

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rlm_engine
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/rlm_engine

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Default model (options: gpt-4-turbo-preview, gpt-4o, claude-3-opus-20240229, etc.)
DEFAULT_MODEL=gpt-4-turbo-preview

# Engine settings
MAX_CONTEXT_SIZE=500000
DEFAULT_CHUNK_SIZE=50000
MAX_RECURSION_DEPTH=10
EXECUTION_TIMEOUT=300

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
